{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 500,
    "height": 300,
    "title": "Short-term Visitor Arrivals by Australian States (July 2024)",
    "data": {
      "url": "path_to_your_geojson_file.geojson",
      "format": {
        "type": "topojson",
        "feature": "your_feature_name"
      }
    },
    "transform": [
      {
        "lookup": "properties.STATE_NAME",
        "from": {
          "data": {
            "values": [
              {"Region": "New South Wales", "visitors": 234450},
              {"Region": "Victoria", "visitors": 161390},
              {"Region": "Queensland", "visitors": 171360},
              {"Region": "South Australia", "visitors": 15820},
              {"Region": "Western Australia", "visitors": 56420},
              {"Region": "Tasmania", "visitors": 3900},
              {"Region": "Northern Territory", "visitors": 6740},
              {"Region": "Australian Capital Territory", "visitors": 8810}
            ]
          },
          "key": "Region",
          "fields": ["visitors"]
        }
      }
    ],
    "projection": {
      "type": "mercator"
    },
    "mark": "geoshape",
    "encoding": {
      "color": {
        "field": "visitors",
        "type": "quantitative",
        "scale": {
          "scheme": "blues"
        }
      },
      "tooltip": [
        {"field": "properties.STATE_NAME", "type": "nominal", "title": "State"},
        {"field": "visitors", "type": "quantitative", "title": "Visitor Arrivals"}
      ]
    }
  }
  