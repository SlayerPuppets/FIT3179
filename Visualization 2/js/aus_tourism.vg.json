{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 700,
  "height": 500,
  "title": "Short-term Visitor Arrivals per Capita by Australian States (July 2024)",
  "data": {
    "url": "https://raw.githubusercontent.com/SlayerPuppets/FIT3179/main/Visualization%202/data/georef-australia-state@public.topojson",
    "format": {
      "type": "topojson",
      "feature": "georef-australia-state@public"
    }
  },
  "transform": [
    {
      "lookup": "properties.ste_name",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/SlayerPuppets/FIT3179/main/Visualization%202/data/tourist_by_state.csv"
        },
        "key": "Region",
        "fields": ["Number of visitor arrivals"]
      }
    },
    {
      "lookup": "properties.ste_name",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/SlayerPuppets/FIT3179/main/Visualization%202/data/aus_pop_24.csv"
        },
        "key": "Region",
        "fields": ["Population"]
      }
    },
    {
      "calculate": "datum['Number of visitor arrivals'] / datum['Population']",
      "as": "visitors_per_capita"
    }
  ],
  "projection": {
    "type": "mercator"
  },
  "mark": {
    "type": "geoshape",
    "stroke": "black",
    "strokeWidth": 0.5
  },
  "encoding": {
    "color": {
      "field": "visitors_per_capita",
      "type": "quantitative",
      "scale": {
        "domain": [0, 0.035],
        "range": ["#f7fbff", "#6baed6", "#08306b"]
      },
      "legend": {
        "title": "Visitor Arrivals per Capita",
        "offset": -60  
      }
    },
    "tooltip": [
      {"field": "properties.ste_name", "type": "nominal", "title": "State or Territory"},
      {"field": "Number of visitor arrivals", "type": "quantitative", "title": "Visitor Arrivals"},
      {"field": "Population", "type": "quantitative", "title": "Population"},
      {"field": "visitors_per_capita", "type": "quantitative", "title": "Visitors per Capita"}
    ]
  }
}
